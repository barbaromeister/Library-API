# Development Environment Configuration
# This file contains safe defaults for development

# Application settings
APP_PORT=3000
SPRING_PROFILES_ACTIVE=development
APP_NAME=Library Management System (Development)

# Database settings (development)
DB_HOST=postgres
DB_PORT=5432
DB_NAME=kutuphane
DB_USERNAME=admin
DB_PASSWORD=123456
DB_EXTERNAL_PORT=5433

# URLs
SPRING_DATASOURCE_URL=jdbc:postgresql://postgres:5432/kutuphane
SPRING_DATASOURCE_USERNAME=admin
SPRING_DATASOURCE_PASSWORD=123456

# Postgres settings
POSTGRES_DB=kutuphane
POSTGRES_USER=admin
POSTGRES_PASSWORD=123456

# JPA settings for development
SPRING_JPA_HIBERNATE_DDL_AUTO=update
SPRING_JPA_SHOW_SQL=true

# Logging (verbose for development)
LOGGING_LEVEL_ROOT=INFO
LOGGING_LEVEL_COM_KUTUPHANE=DEBUG

# Docker settings
COMPOSE_PROJECT_NAME=library-dev
NETWORK_NAME=library-dev-network
POSTGRES_VOLUME=postgres_dev_data

# Backup settings
BACKUP_DIR=./backups
BACKUP_RETENTION_DAYS=7

# Monitoring (enabled for development)
MANAGEMENT_ENDPOINTS_WEB_EXPOSURE_INCLUDE=*
MANAGEMENT_SERVER_PORT=8081

# CORS (permissive for development)
CORS_ALLOWED_ORIGINS=*

# Performance (lower resource usage for development)
JAVA_OPTS=-Xmx256m -Xms128m
SPRING_DATASOURCE_HIKARI_MAXIMUM_POOL_SIZE=10
SPRING_DATASOURCE_HIKARI_MINIMUM_IDLE=2