# Library Management System Environment Configuration
# Copy this file to .env and modify the values as needed

# ===============================================
# APPLICATION SETTINGS
# ===============================================

# Application port (external port that will be exposed)
APP_PORT=3000

# Spring Boot profile (development, production, test)
SPRING_PROFILES_ACTIVE=production

# Application name
APP_NAME=Library Management System

# ===============================================
# DATABASE SETTINGS
# ===============================================

# Database connection settings
DB_HOST=postgres
DB_PORT=5432
DB_NAME=kutuphane
DB_USERNAME=admin
DB_PASSWORD=secure_password_change_me

# External database port (for connecting from host)
DB_EXTERNAL_PORT=5433

# Database URL (constructed from above settings)
SPRING_DATASOURCE_URL=jdbc:postgresql://${DB_HOST}:${DB_PORT}/${DB_NAME}
SPRING_DATASOURCE_USERNAME=${DB_USERNAME}
SPRING_DATASOURCE_PASSWORD=${DB_PASSWORD}

# ===============================================
# SECURITY SETTINGS
# ===============================================

# Change these for production!
POSTGRES_DB=${DB_NAME}
POSTGRES_USER=${DB_USERNAME}
POSTGRES_PASSWORD=${DB_PASSWORD}

# ===============================================
# JPA/HIBERNATE SETTINGS
# ===============================================

# Hibernate DDL mode (create, create-drop, update, validate, none)
# Use 'update' for development, 'validate' for production
SPRING_JPA_HIBERNATE_DDL_AUTO=update

# Show SQL queries in logs (true/false)
SPRING_JPA_SHOW_SQL=false

# ===============================================
# LOGGING SETTINGS
# ===============================================

# Log level (ERROR, WARN, INFO, DEBUG, TRACE)
LOGGING_LEVEL_ROOT=INFO
LOGGING_LEVEL_COM_KUTUPHANE=INFO

# ===============================================
# DOCKER SETTINGS
# ===============================================

# Docker compose project name
COMPOSE_PROJECT_NAME=library-management

# Docker network name
NETWORK_NAME=library-network

# Volume names
POSTGRES_VOLUME=postgres_data

# ===============================================
# BACKUP SETTINGS
# ===============================================

# Backup directory (relative to project root)
BACKUP_DIR=./backups

# Number of backups to keep
BACKUP_RETENTION_DAYS=30

# ===============================================
# MONITORING SETTINGS
# ===============================================

# Enable actuator endpoints (true/false)
MANAGEMENT_ENDPOINTS_WEB_EXPOSURE_INCLUDE=health,info,metrics

# Actuator port (if different from main app)
MANAGEMENT_SERVER_PORT=8081

# ===============================================
# FRONTEND SETTINGS
# ===============================================

# Frontend build settings
FRONTEND_BUILD_PATH=/app/src/main/resources/static

# ===============================================
# CORS SETTINGS
# ===============================================

# Allowed origins for CORS (comma-separated)
CORS_ALLOWED_ORIGINS=http://localhost:3000,http://localhost:8080

# ===============================================
# PERFORMANCE SETTINGS
# ===============================================

# JVM memory settings for the application
JAVA_OPTS=-Xmx512m -Xms256m

# Database connection pool settings
SPRING_DATASOURCE_HIKARI_MAXIMUM_POOL_SIZE=20
SPRING_DATASOURCE_HIKARI_MINIMUM_IDLE=5