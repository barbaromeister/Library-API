# Production Environment Configuration
# IMPORTANT: Change all passwords and sensitive values before using in production!

# Application settings
APP_PORT=3000
SPRING_PROFILES_ACTIVE=production
APP_NAME=Library Management System

# Database settings (CHANGE THESE FOR PRODUCTION!)
DB_HOST=postgres
DB_PORT=5432
DB_NAME=kutuphane
DB_USERNAME=library_admin
DB_PASSWORD=CHANGE_THIS_SECURE_PASSWORD_NOW
DB_EXTERNAL_PORT=5433

# URLs
SPRING_DATASOURCE_URL=jdbc:postgresql://postgres:5432/kutuphane
SPRING_DATASOURCE_USERNAME=library_admin
SPRING_DATASOURCE_PASSWORD=CHANGE_THIS_SECURE_PASSWORD_NOW

# Postgres settings
POSTGRES_DB=kutuphane
POSTGRES_USER=library_admin
POSTGRES_PASSWORD=CHANGE_THIS_SECURE_PASSWORD_NOW

# JPA settings for production
SPRING_JPA_HIBERNATE_DDL_AUTO=validate
SPRING_JPA_SHOW_SQL=false

# Logging (minimal for production)
LOGGING_LEVEL_ROOT=WARN
LOGGING_LEVEL_COM_KUTUPHANE=INFO

# Docker settings
COMPOSE_PROJECT_NAME=library-prod
NETWORK_NAME=library-prod-network
POSTGRES_VOLUME=postgres_prod_data

# Backup settings
BACKUP_DIR=./backups
BACKUP_RETENTION_DAYS=90

# Monitoring (restricted for production)
MANAGEMENT_ENDPOINTS_WEB_EXPOSURE_INCLUDE=health,info
MANAGEMENT_SERVER_PORT=8081

# CORS (restrictive for production)
CORS_ALLOWED_ORIGINS=https://yourdomain.com,https://www.yourdomain.com

# Performance (optimized for production)
JAVA_OPTS=-Xmx1g -Xms512m -XX:+UseG1GC -XX:MaxGCPauseMillis=200
SPRING_DATASOURCE_HIKARI_MAXIMUM_POOL_SIZE=50
SPRING_DATASOURCE_HIKARI_MINIMUM_IDLE=10

# Production security headers
SPRING_SECURITY_REQUIRE_SSL=true
SERVER_SSL_ENABLED=false

# Additional production settings
SPRING_JPA_PROPERTIES_HIBERNATE_JDBC_BATCH_SIZE=25
SPRING_JPA_PROPERTIES_HIBERNATE_ORDER_INSERTS=true
SPRING_JPA_PROPERTIES_HIBERNATE_ORDER_UPDATES=true
SPRING_JPA_PROPERTIES_HIBERNATE_JDBC_BATCH_VERSIONED_DATA=true